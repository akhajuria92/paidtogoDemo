<?xml version="1.0" encoding="utf-8"?>
<layout >
    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_rect">

        <TextView
            android:id="@+id/mTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="12dp"
            android:text="@string/invite_an_organization"
            android:textSize="22sp"
            android:fontFamily="@font/firasans_regular"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/mDescription"/>

        <TextView
            android:id="@+id/mDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/connect_with_sponsor_description"
            android:fontFamily="@font/firasans_regular"
            app:layout_constraintStart_toStartOf="@id/mTitle"
            app:layout_constraintEnd_toEndOf="@id/mTitle" />

        <TextView
            android:id="@+id/mClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="X"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/mNameLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/name_of_the_organization"
            android:fontFamily="@font/firasans_semibold"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@id/mDescription"
            app:layout_constraintStart_toStartOf="@id/mDescription"
            app:layout_constraintEnd_toEndOf="@id/mDescription"/>

        <EditText
            android:id="@+id/mNameField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/mNameLabel"
            app:layout_constraintStart_toStartOf="@id/mNameLabel"
            app:layout_constraintEnd_toEndOf="@id/mNameLabel"/>

        <TextView
            android:id="@+id/mContactInfoLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Organization Contact Information"
            android:fontFamily="@font/firasans_semibold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/mNameField"
            app:layout_constraintStart_toStartOf="@id/mNameField"
            app:layout_constraintEnd_toEndOf="@id/mNameField"/>

        <EditText
            android:id="@+id/mContactInfoField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/mContactInfoLabel"
            app:layout_constraintStart_toStartOf="@id/mContactInfoLabel"
            app:layout_constraintEnd_toEndOf="@id/mContactInfoLabel"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:layout_margin="24dp"
            android:text="@string/submit"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/firasans_semibold"
            android:backgroundTint="@color/colorAccent"
            app:layout_constraintTop_toBottomOf="@id/mContactInfoField"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
