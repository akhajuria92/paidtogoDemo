<?xml version="1.0" encoding="utf-8"?>
<layout >
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@drawable/round_rect"
        android:elevation="3dp">

        <TextView
            android:id="@+id/mTitle"
            android:text="20% off in signature creations"
            android:lines="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textSize="23dp"
            android:fontFamily="@font/firasans_medium"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/mLogoImage"
            app:layout_constraintHorizontal_bias="0" />

        <TextView
            android:id="@+id/mSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cold Stone Creamery"
            app:layout_constraintStart_toStartOf="@id/mTitle"
            app:layout_constraintTop_toBottomOf="@id/mTitle"/>

        <TextView
            android:id="@+id/mDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="You've reached the goals to access to this offer"
            app:layout_constraintBottom_toTopOf="@id/mMainButton"
            app:layout_constraintStart_toStartOf="@id/mMainButton"/>

        <TextView
            android:id="@+id/mMainButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:text="REDEEM NOW"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:fontFamily="@font/firasans_medium"
            android:gravity="center"
            android:background="@drawable/round_rect"
            android:backgroundTint="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/mLogoImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="12dp"
            android:src="@drawable/ic_coupon"
            android:scaleType="centerInside"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>